            {{else}}
            <input id="cbChild_${Id}" type="checkbox" class="checkChildRecord" value="${Id}" enabled>
            {{/if}}
        </th>
        <td>${index}</td>
        <td>${Id}</td>
        <td>${SubjectName}</td>
        <td>${SubjectType}</td>
        <td>${CreateOn}</td>
        <td>${CreateBy}</td>
        <td>
